@using ThreeDimensionalWorld.Models
@model IEnumerable<Category>

@{
    ViewData["Title"] = "Категории";
}

<div class="d-flex flex-column align-items-center justify-content-center">
    <h1>@ViewData["Title"]</h1>
    <hr class="w-100" />
</div>

<div class="row">
    @foreach(var item in Model)
    {
        <div class="col-md-4">
            <a class="text-decoration-none" style="color: inherit" asp-controller="Products" asp-action="Index" asp-route-categoryId="@item.Id">
                <div class="category-card" style="background-image: url('/images/@item.Image'); display: flex; align-items: center; justify-content:center;">
                    <h1>@item.Name</h1>
                </div>
            </a>

        </div>
    }
</div>
