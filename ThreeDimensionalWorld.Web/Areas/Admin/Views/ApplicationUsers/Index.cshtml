@model IEnumerable<ThreeDimensionalWorld.Models.ApplicationUser>

@{
    ViewData["Title"] = "Потребители";
}

<h1>Потребители</h1>

@* <p>
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Добави</a>
</p> *@
<table class="table">
    <thead>
        <tr>
            <th>
                Потребителско име
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                Имейл
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td class="text-wrap">
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <div class="row">
                    <div class="col-md-4">

                        <a asp-action="ManageRoles" class="btn btn-dark" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Роли</a>
                    </div>

                    <div class="col-md-4">
                        <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id"><i class="bi bi-search"></i> Детайли</a>
                    </div>

                    <div class="col-md-4">
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Изтрий</a>
                    </div>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    <script src="~/js/datatables.js"></script>
}