@model ThreeDimensionalWorld.Web.Areas.Admin.Models.ShippingPriceVM
@{
    ViewData["Title"] = "Цена на поръчка";
}

<div class="d-flex flex-column align-items-center justify-content-center">
    <h1>@ViewData["Title"]</h1>
    <hr class="w-100" />
</div>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" min="0" step="0.01" type="number" value="@Model.Price.ToString("F2")" />
        <span asp-for="Price" class="text-danger"></span>
    </div>

    <input class="btn btn-primary mt-2" type="submit" value="Запази" />
</form>