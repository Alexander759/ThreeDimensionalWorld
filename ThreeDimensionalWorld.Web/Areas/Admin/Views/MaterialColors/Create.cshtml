@model ThreeDimensionalWorld.Models.MaterialColor

@{
    ViewData["Title"] = "Добавяне";
}

<h1>Добавяне</h1>

<h4>Цвят</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ColorCode" class="control-label"></label>
                <input asp-for="ColorCode" type="color" class="form-control color-input" />
                <span asp-validation-for="ColorCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавяне" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Към списъка</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
